<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="26dp"
        >
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/svet"
                    android:layout_gravity="center_horizontal"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/model_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="model_id" />


                <TextView
                    android:id="@+id/name_product_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Name_of_product"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/price_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="50"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/icon_dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="som"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/description_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空間和瓦特朗"
                    android:textColorLink="@color/black"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="9dp"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ability_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="available or not"
                    android:textColorLink="#CB1C1C1C"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp" />

                <ImageButton
                    android:id="@+id/btn_zoom"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:padding="9dp"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="right"
                    android:scaleType="fitCenter"
                    android:background="@drawable/back_backet"
                    android:src="@drawable/down" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/tovar_favorite_check"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/yes"
            android:layout_gravity="center"
            android:visibility="invisible"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>